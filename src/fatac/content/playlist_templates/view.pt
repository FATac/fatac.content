<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="fatac.content">

<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="context/title" />
        
        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <div class="row">
            <div class="span3">
                <img tal:condition="context/descImage" tal:replace="structure context/@@images/descImage/thumb" />
            </div>
 
            <div class="span12">
                <p class="documentDescription" tal:content="context/description" />
            </div>
        </div>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div class="row">
            <div class="span5" id="sortable">
                <tal:re tal:repeat="llista context/orderedList">
                    <div class="alert-message warning" style="cursor: pointer"
                         tal:define="num python:llista[0]"
                         tal:attributes="id string:listItem_$num">
                         <input id="forRemove" type="checkbox" />   <span tal:content="python:llista[1]" />
                    </div>
                </tal:re>
            </div>
            
<!--
            <div class="span5" >
                <tal:rep tal:repeat="relacionats context/listToPlay">
                    <div class="alert-message success" 
                         tal:attributes="class python: (repeat['relacionats'].even() and 'alert-message success') or 'alert-message info'" 
                         tal:condition="python: relacionats.to_object!=None"
                         tal:content="relacionats/to_object/title" />
                </tal:rep>
            </div>
-->
        </div>
        <button id="forRemove_all" class="btn info">Select All</button>  <button id="deleteAll" class="btn danger">Delete Selection</button>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>
