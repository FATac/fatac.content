<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">

 <action-provider name="portal_workflow"/>
 <action-provider name="portal_types"/>
 <action-provider name="portal_actions"/>

 <object name="user" meta_type="CMF Action Category">

  <object name="Add Playlist" meta_type="CMF Action" i18n:domain="plone">
   <property name="title" i18n:translate="">Afegeix Playlist</property>
   <property name="description" i18n:translate=""></property>
   <property name="url_expr">string:${portal/portal_membership/getHomeUrl}/++add++fatac.playlist</property>
   <property name="icon_expr">string:++resource++fatac.theme.images/ico_ampliar.png</property>
   <property name="available_expr"></property>
   <property name="permissions">
    <element value="fatac.AddPlaylist" />
    <element value="Playlist: Add Playlist" />
   </property>
   <property name="visible">True</property>
  </object>

  <object name="Add File" meta_type="CMF Action" i18n:domain="plone">
   <property name="title" i18n:translate="">Afegeix Fitxer</property>
   <property name="description" i18n:translate=""></property>
   <property name="url_expr">string:$portal_url/Members/${member/id}/createObject?type_name=File</property>
   <property name="icon_expr">string:++resource++fatac.theme.images/ico_ampliar.png</property>
   <property name="available_expr"></property>
   <property name="permissions">
    <element value="Add portal content"/>
   </property>
   <property name="visible">False</property>
  </object>

  <object name="Add Group" meta_type="CMF Action" i18n:domain="plone">
   <property name="title" i18n:translate="">Afegeix Grup</property>
   <property name="description" i18n:translate=""></property>
   <property name="url_expr">string:$portal_url/@@usergroup-groupdetails</property>
   <property name="icon_expr">string:++resource++fatac.theme.images/ico_ampliar.png</property>
   <property name="available_expr"></property>
   <property name="permissions">
    <element value="Add Groups"/>
   </property>
   <property name="visible">True</property>
  </object>

 </object>
</object>
